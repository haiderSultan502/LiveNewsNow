<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg_color"
    android:paddingLeft="@dimen/_18sdp"
    android:paddingRight="@dimen/_18sdp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:text="LIVE"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:textColor="@color/post_title_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:text="We have managed to bring the live new streaming for our readers, it may be audio or video, Our mission is to provide a single platform for daily news updates. For watching online, please select the live news video below."
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/post_detail_text_color"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_live_item_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_12sdp"/>














</LinearLayout>