<!--            android:textColor="@color/post_detail_text_color"/>-->

        <WebView
            android:id="@+id/web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_8sdp"></WebView>


    </LinearLayout>



</LinearLayout>

</ScrollView>